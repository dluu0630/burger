<div class="container">

	<div class="row">

		<div class="col-md-12">
			<img src="/assets/img/burger.png" alt="burger" class="img-responsive center-block">
		</div>

	</div>

	<div class="row">

		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Da-Burger</h1>
		</div>
	
	</div>

<!-- Current Burger -->	
<div class="col-md-2"></div>
<div class="row">
	<div class="col-md-4">
  		<h2 class="uneaten-title text-danger">Current Burger</h2>
  			<ul class="uneaten">
    				{{#each burgers}}
      				{{#unless this.devoured}}
        		<li>
          		<p>{{this.burger_name}}</p>
          			<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            		<input type="hidden" name="devoured" value="true">
            		<button type="submit" class="btn btn-default">Eat!</button>
          			</form>
        		</li>
     				 {{/unless}}
   					 {{/each}}
  			</ul>
	</div>

<!-- Burgers Eaten -->	
	<div class="col-md-2"></div>
	<div class="col-md-4" id="eaten">
      <h2 class="eaten-title text-danger">Eaten Burgers</h2>
      <ul class="burgers-eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <p>
                {{this.burger_name}}
              </p>
            </li>
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
             <input type="hidden" name="devoured" value="false">
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>

<!-- Add Burger Section -->
<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-4" id="update">
      <br><br><br>
        <form class="create-update-form" action="burgers/create" method="POST">
          <div class="form-group">
            <input type="hidden" name="devoured" value="0">
            <input type="text" id="newBurger" name="burger_name">
          <button type="submit" class="btn btn-default">Add Burger</button>
        </form>
      </div>
    </div>
</div>
